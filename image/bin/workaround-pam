#!/bin/sh
# from https://github.com/sequenceiq/docker-pam
set -e

WORKING_DIR=/tmp/workaround-pam

yum install -y tar bzip2 yum-utils rpm-build
mkdir -p $WORKING_DIR
cd ${WORKING_DIR} && yum-builddep -y pam && yumdownloader --source pam && rpmbuild --rebuild  --define 'WITH_AUDIT 0' --define 'dist +noaudit' pam*.src.rpm
rpm -Uvh --oldpackage ~/rpmbuild/RPMS/*/pam*+noaudit*.rpm
rm -rf $WORKING_DIR
rm -rf ~/rpmbuild
